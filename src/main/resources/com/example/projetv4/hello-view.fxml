<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="621.0" prefWidth="710.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projetv4.HelloController">

    <children>
        <!-- VBox avec un arrière-plan semi-transparent et des éléments centrés -->
        <VBox alignment="CENTER" layoutX="205.0" layoutY="1.0" prefHeight="621.0" prefWidth="300.0" spacing="20" style="-fx-background-color: rgba(0, 0, 255, 0.1); -fx-border-radius: 15; -fx-background-radius: 15;">
            <children>
                <!-- Titre Admin Login avec une couleur de texte bleu -->
                <Text style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #1E90FF;" text="Admin Login" textAlignment="CENTER" wrappingWidth="192.8203125" />
                <!-- Champs de texte avec fond bleu clair et texte en bleu foncé -->
                <TextField fx:id="adminUsername" promptText="Enter Admin Username" style="-fx-background-color: #E0F7FA; -fx-text-fill: #0277BD;" />
                <PasswordField fx:id="adminPassword" promptText="Enter Admin Password" style="-fx-background-color: #E0F7FA; -fx-text-fill: #0277BD;" />
                <!-- Bouton bleu avec texte blanc -->
                <Button fx:id="signIn" onAction="#handleGererAdmin" style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-weight: bold;" text="Sign In" />
                <!-- Titre User Login avec une couleur de texte bleu -->
                <Text style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #1E90FF;" text="User Login" textAlignment="CENTER" wrappingWidth="151.2109375" />
                <!-- Bouton Start Camera avec un fond bleu -->
                <Button fx:id="starCam" onAction="#handleGererUser" style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-weight: bold;" text="Start Camera" />
            </children>
        </VBox>
    </children>
    <style>
        -fx-background-image: url("images/detImag.jpg");
        -fx-background-size: cover; /* Couvre toute la zone */
        -fx-background-position: center center; /* Centre l'image */
    </style>
</AnchorPane>
